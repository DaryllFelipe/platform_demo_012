@using DataAccess.Public.Dto;
@model List<CustomerOrderDto>
@{
    
    ViewData["Title"] = "Home Page";
}

<section class="section">
    <div class="container">
        <h1 class="title">Customer Orders</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table is-fullwidth">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Total Order</th>
                        <th width="10%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Customer.Name</td>
                            <td>@item.Customer.PhoneNumber</td>
                            <td>
                                @item.Orders.Count 
                            </td>
                            <td>
                                @Html.ActionLink("See Orders", "Order", "Home", new { id = item.Customer.CustomerId }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No data found</p>   
        }
    </div>
</section>
